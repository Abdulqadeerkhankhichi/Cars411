
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CLayout.cshtml";
}
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_CLayout.cshtml";
}

<div class="col-md-7 col-lg-8 col-xl-9">
    <div class="row">
        <div class="col-md-5 col-5">
            <div class="breadcrumb-bar">
                <div class="container-fluid">
                    <div class="row align-items-center">

                        <h2 class="breadcrumb-title">Posts List</h2>


                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-2" style="background-color:white !important;"></div>
        <div class="col-md-5 col-5">

            <a href="#Add_Post_details" data-toggle="modal" class="btn btn-primary float-right mt-2">Add New Post</a>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0" id="ScrapperList">
                            <thead>
                                <tr>
                                    <th> Title</th>
                                    <th>Service Cost</th>
                                    <th>Make</th>
                                    <th>Model</th>
                                    <th>Year</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <h2 class="table-avatar">
                                            <a href="profile.html" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="~/assets/img/Cars/toyota.jpg" alt="User Image"></a>
                                            <a href="profile.html">Toyota</a>
                                        </h2>
                                    </td>
                                    <td>2500</td>
                                    <td>City</td>
                                    <td>2008</td>
                                    <td>2008</td>
                                    <td class="text-right">
                                        <div class="table-action">

                                            <a href="javascript:void(0);" class="btn btn-sm bg-success-light">
                                                <i class="fas fa-pen"></i> Edit
                                            </a>
                                            <a href="javascript:void(0);" class="btn btn-sm bg-danger-light">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/jquery-3.5.1.js"></script>
<script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/assets/plugins/datatables/datatables.min.js"></script>
<script>

    $(document).ready(function () {
        $('#ScrapperList').DataTable({
            searching: true,
            "ordering": false
        });
    });
</script>
